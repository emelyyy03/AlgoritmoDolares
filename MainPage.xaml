<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AlgoritmoDolares.MainPage">

    <StackLayout Padding="40">
        <Label Text="Algoritmo que convierte pesos mexicanos en dólares"
               HorizontalTextAlignment="Center"
               TextColor="Black"/>
        <Entry x:Name="entryPesos"  Placeholder="Digite la cantidad de pesos mexicanos"/>
        <Label x:Name="labelDolares" HorizontalTextAlignment="Center" TextColor="Black"/>
        <Button Text="Toque para obtener la cantidad en dólares"
                BackgroundColor="LightPink"
                TextColor="Black"
                Clicked="Button_Clicked"/>

    </StackLayout>

</ContentPage>
